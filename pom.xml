        <maven-enforcer-plugin.version>3.0.0-M2</maven-enforcer-plugin.version>
        <guava-beta-checker.version>1.0</guava-beta-checker.version>
        <plexus-compiler-javac-errorprone.version>2.8.5</plexus-compiler-javac-errorprone.version>
        <google-errorprone.version>2.3.2</google-errorprone.version>
        <spotify-dockerfile-maven-plugin.version>1.4.8</spotify-dockerfile-maven-plugin.version>
